interp "let x = ref 1 in let u = while !x < 1000 do x := !x * 2 in !x";;
- : value = VInt 1024


interp "let x = ref 0 in let u = while !x <= 10 do (let u = x := !x + 3 in let z = continue in x:= !x + 30)  in !x";;
- : value = VInt 12


interp "let x = ref 0 in let u = while true do if !x > 10 then break else x := !x + 1 in !x";;
- : value = VInt 11

interp "while true do (break, let f = funrec f x -> f x in f 2)";;
- : value = VUnit
